
@{
    Layout = "_AccountLayout";
    ViewBag.Title = "登录";
}


<div class="well col-md-5 col-md-offset-3">
    @*提交的地址*@
    @* 异步提交表单 *@
    @* 异步提交方式 *@
    @* 提交失败执行的方法 *@
    @* 提交时显示的标签 *@
    @* 提交成功执行的方法 *@
    @* 验证 *@
    <form action="/Account/Login"
          data-ajax="true"
          data-ajax-method="post"
          data-ajax-failure="error"
          data-ajax-loading="#loding"
          data-ajax-success="success"
          novalidate="novalidate"
          data-val="true"
          style="width:80%;margin:0px auto;">
        <div class="row">
            <h1>登陆</h1>
            <br />
            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <input name="Account"
                   type="text"
                   class="form-control"
                   data-val="true"
                   data-val-required="请输入账号"
                   placeholder="账号"
                   required="required"
                   value="" />
            <span class="field-validation-valid text-danger" data-valmsg-for="Account" data-valmsg-replace="true"></span><br />
            <input name="Passwrd"
                   type="password"
                   class="form-control"
                   data-val="true"
                   data-val-required="请输入密码"
                   placeholder="密码"
                   required="required" />
            <span class="field-validation-valid text-danger" data-valmsg-for="Passwrd" data-valmsg-replace="true"></span><br />
            <div class="form-inline">
                <input name="VerifyCode"
                       type="text"
                       class="form-control"
                       data-val="true"
                       data-val-required="请输入验证码"
                       placeholder="验证码"
                       required="required"
                       style="display:inline-block;width:50%;" />
                <img id="img" class="img-responsive center-block" src="" style="margin-top:-2px; display:inline-block;" />
            </div>
            <span class="field-validation-valid text-danger"
                  data-valmsg-for="VerifyCode"
                  data-valmsg-replace="true"></span>
            <br />
            <input type="submit" class="btn btn-default form-control" value="登陆" />
        </div>

    </form>

    @* 登录页面脚本 *@
    <script src="@Url.Content("/Scripts/myscripts/login.js")" type="text/javascript"></script>
</div>




